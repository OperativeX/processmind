# ProcessLink Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# GENERAL CONFIGURATION
# ============================================
NODE_ENV=production
TZ=Europe/Berlin

# Port Configuration
BACKEND_PORT=5000
FRONTEND_PORT=5001

# Max file size in bytes (2GB default)
MAX_FILE_SIZE=2147483648

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB
MONGODB_URI=mongodb://admin:your_password@mongodb:27017/processlink?authSource=admin
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password
MONGO_DATABASE=processlink

# Redis
REDIS_URL=redis://redis:6379

# ============================================
# SECURITY & AUTHENTICATION
# ============================================
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# ============================================
# EXTERNAL SERVICES
# ============================================
# OpenAI API (Required)
OPENAI_API_KEY=sk-your-openai-api-key

# Email Configuration (Required for auth)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# S3 Storage (Optional - for production)
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=
S3_BUCKET=
S3_REGION=eu-central-1

# Stripe (Optional - for billing)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_FREE=
STRIPE_PRICE_ID_PRO=
STRIPE_PRICE_ID_TEAM=

# ============================================
# APPLICATION SETTINGS
# ============================================
# Frontend URL for CORS and emails
FRONTEND_URL=http://localhost:5001
CORS_ORIGIN=http://localhost:5001

# Logging
LOG_LEVEL=info

# Worker Configuration
DISABLE_WORKERS=false
PM2_INSTANCES=2
HEAVY_WORKER_INSTANCES=2

# ============================================
# DEPLOYMENT SPECIFIC (Optional)
# ============================================
# For PM2 deployment
DEPLOY_HOST=
DEPLOY_REPO=
STAGING_HOST=

# For Coolify or other platforms
COOLIFY_URL=
COOLIFY_TOKEN=