# Server Configuration
PORT=5000
NODE_ENV=production
FRONTEND_URL=http://localhost:5001

# Port Configuration for Docker Compose
BACKEND_PORT=5000
FRONTEND_PORT=5001

# Database
# MongoDB läuft auf externem Server
MONGODB_URI=mongodb://188.245.198.141:27017/processmind

# Redis läuft als Docker Container
REDIS_URL=redis://redis:6379

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# JWT Authentication
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=15m

# File Upload Configuration  
MAX_FILE_SIZE=2147483648
UPLOAD_DIR=./uploads/temp
PROCESSED_DIR=./uploads/processed

# S3-compatible Object Storage (optional)
S3_ENDPOINT=https://your-s3-endpoint.com
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_BUCKET=your_bucket_name
S3_REGION=your_region

# FFmpeg Paths
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Email Configuration
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@processmind.com
SMTP_FROM_NAME=Process Mind

# Stripe Configuration (optional)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PRO_PRICE_ID=your_stripe_price_id

# Pricing Configuration
PRO_PLAN_PRICE_PER_USER=10

# Super Admin Configuration
SUPER_ADMIN_EMAIL=admin@processmind.com
SUPER_ADMIN_PASSWORD_HASH=generate_with_bcrypt
SUPER_ADMIN_SECRET=generate_random_64_char_hex
SUPER_ADMIN_TOKEN_EXPIRES=4h

# Coolify Specific Settings
# Coolify generiert automatisch einige Umgebungsvariablen:
# - COOLIFY_APP_ID
# - COOLIFY_BASE_URL
# - COOLIFY_URL

# Worker Configuration
DISABLE_WORKERS=false
WORKER_CONCURRENCY=3

# CORS Configuration
CORS_ORIGIN=http://localhost:5001

# Feature Flags
ENABLE_PUBLIC_SHARING=true
ENABLE_MULTI_TENANT=true