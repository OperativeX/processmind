{
  "name": "processlink-backend",
  "version": "1.0.0",
  "description": "ProcessLink Backend API with Multi-Tenant Architecture",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop all",
    "restart:pm2": "pm2 restart all",
    "dev": "nodemon src/server.js",
    "worker": "node src/workers/queue-worker-process.js",
    "docker:build": "docker build -t processmind-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env processmind-backend",
    "health:check": "node -e \"require('http').get('http://localhost:5000/health', (res) => { console.log('Health:', res.statusCode); process.exit(res.statusCode === 200 ? 0 : 1); })\"",
    "migrate": "node scripts/migrate-to-new-pricing-model.js",
    "seed": "node scripts/seed-test-data.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test:email": "node test-email-service.js",
    "test:password-reset": "node test-password-reset.js",
    "test:multi-tenant": "node test-multi-tenant-flow.js",
    "test:smtp": "node test-smtp-connection.js",
    "logs:clear": "rm -rf logs/*.log",
    "cache:clear": "node scripts/clear-cache.js"
  },
  "keywords": [
    "video-processing",
    "transcription",
    "saas",
    "multi-tenant",
    "nodejs"
  ],
  "author": "ProcessLink Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/processmind-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/processmind-backend/issues"
  },
  "homepage": "https://github.com/yourusername/processmind-backend#readme",
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.18.3",
    "busboy": "^1.6.0",
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fluent-ffmpeg": "^2.1.2",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.6",
    "redis": "^4.6.10",
    "stripe": "^18.5.0",
    "table": "^6.9.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.7",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
