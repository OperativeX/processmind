# ProcessMind Frontend Environment Configuration
# Copy this file to .env.local and update with your actual values

# API Configuration
REACT_APP_API_URL=https://api.yourdomain.com
# For development: http://localhost:5000

# File Upload Configuration
# Maximum file size in bytes (2GB = 2147483648)
REACT_APP_MAX_FILE_SIZE=2147483648

# Optional: WebSocket URL (if different from API URL)
# REACT_APP_WS_URL=wss://api.yourdomain.com

# Optional: Public URL of the application
# REACT_APP_PUBLIC_URL=https://yourdomain.com

# Feature Flags
REACT_APP_ENABLE_STRIPE=true
REACT_APP_ENABLE_TEAMS=true
REACT_APP_ENABLE_PUBLIC_SHARING=true

# Stripe Public Key (optional - for payments)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Development/Debug Settings (remove in production)
# REACT_APP_DEBUG=false